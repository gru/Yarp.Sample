{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "keycloak": {
        "SessionAffinity": {
          "Enabled": "true",
          "Policy": "Cookie",
          "FailurePolicy": "Redistribute",
          "AffinityKeyName": "AUTH_SESSION_ID",
          "Cookie": {
            "Domain": "localhost",
            "Expiration": "03:00:00",
            "HttpOnly": true,
            "IsEssential": true,
            "MaxAge": "1.00:00:00",
            "Path": "auth",
            "SameSite": "Strict",
            "SecurePolicy": "Always"
          }
        },
        "Destinations": {
          "instance1": {
            "Address": "http://localhost:8080/"
          },
          "instance2": {
            "Address": "http://localhost:8081/"
          }
        }
      }
    },
    "Routes": {
      "authorizeRoute" : {
        "ClusterId": "keycloak",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      }
    }
  },
  "AllowedHosts": "*"
}
