{
  "Logging": {
    "LogLevel": {
      "Default": "Trace"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "cluster1": {
        "LoadBalancingPolicy": "Random",
        "HttpClient": {
          "MaxConnectionsPerServer": "10",
          "EnableMultipleHttp2Connections": "true"
        },
        "HttpRequest": {
          "ActivityTimeout": "00:00:30",
          "Version": "2",
          "VersionPolicy": [ "RequestVersionOrLower" ]
        },
        "Destinations": {
          "localhost1": {
            "Address": "http://localhost:5001/"
          },
          "localhost2": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    },
    "Routes": {
      "authorizeRoute" : {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/app/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/app" }
        ]
      },
      "introspectRoute" : {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/app/introspection"
        },
        "Transforms": [
          { "PathRemovePrefix": "/app" }
        ],
        "Metadata": {
          "AuthenticationScheme": "Introspection"
        }
      },
      "exchangeRoute" : {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/app/exchange"
        },
        "Transforms": [
          { "PathRemovePrefix": "/app" }
        ],
        "Metadata": {
          "ExchangeToken": true
        }
      }
    }
  },
